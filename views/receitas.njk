{% extends "layout.njk" %}

{% block head %}
  <title>Receitas - Foodfy</title>
{% endblock %}



{% block content %}
<head>
  <title>Receitas</title>
  <link rel="stylesheet" href="/receitas.css" />
</head>


    <main>

      <div class="grid-cards">

        {% for item in items %}
          <div class="card">
            <img src="{{item.img}}" alt="Imagem de {{item.title}}">
            <div class="info">
              <h3>{{item.title}}</h3>
              <p>{{item.subTitle}}</p>
            </div>
          </div>
        {% endfor %}
        
      </div>
    </main>

    <div class="modal-overlay">
      <div class="modal">
        <section class="content">

        </section>
          <a href="#">Fechar modal</a>

  
      </div>
  </div>


   <footer>
      <span>Todos direitos reservados, receitas Foodfy</span>
    </footer>

    <script src="/script.js"></script>

    {% endblock %}
